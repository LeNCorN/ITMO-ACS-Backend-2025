{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "baseUrl": "./src"
    },
    "include": ["src/**/*", "src/tests"],
    "exclude": ["node_modules", "dist"]
}
